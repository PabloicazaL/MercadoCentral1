<div class="container">
<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Tus Platillos", comidas_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Tus Ventas", tus_ventas_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Tus Pedidos", tus_pedidos_path, class: "sidebar-link" %></li>
			
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Platillos
			</div>
			<div class="panel-body">
				
				<% @comidas.each do |comida| %>
					<div class="row">
						<div class="col-md-2">
						<div>
							<%= link_to comida_path(comida) do%>
							<%= image_tag comida.show_first_photo(:medium), class: "img-responsive pull-left" %>
							<% end %>
						</div>
						</div>		
						<div class="col-md-7">
							<%= link_to comida_path(comida), class: "link-nombre"  do%>
							<h4><%= comida.comida_nombre %></h4>
							<% end %>
						</div>		
						<div class="col-md-3 right">
							<%= link_to "Editar", edit_comida_path(comida), class: "btn btn-primary" %>
						</div>		
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>
</div>